        <div class="expense">
            <h2 class="title">&nbsp;Next, Plan Your Expenses!</h2>
            <br>
            <form id="expenseForm">

                <div class="form-group contentFont">
                    <label for="plannedCost">Input your planned spendings by category. (no $ signs)</label>
                    <br>
                    <h6 class="category"><i class="fas fa-utensils"></i>&nbsp;Food:&nbsp;&nbsp;</h6>
                    <input class="form-control form-control-sm plannedCost" id="food" type="text" placeholder="$0">
                    <h6 class="category"><i class="fas fa-hotel"></i>&nbsp;Lodging:&nbsp;&nbsp;</h6>
                    <input class="form-control form-control-sm plannedCost" id="lodging" type="text" placeholder="$0">
                    <h6 class="category"><i class="fas fa-plane-departure"></i>&nbsp;Airfare:&nbsp;&nbsp;</h6>
                    <input class="form-control form-control-sm plannedCost" id="airfare" type="text" placeholder="$0">
                    <h6 class="category"><i class="fas fa-taxi"></i>&nbsp;Transportation:&nbsp;</h6>
                    <input class="form-control form-control-sm plannedCost" id="transportation" type="text" placeholder="$0">
                    <h6 class="category"><i class="fas fa-money-bill-alt"></i>&nbsp;Misc:&nbsp;&nbsp;</h6>
                    <input class="form-control form-control-sm plannedCost" id="misc" type="text" placeholder="$0">
                </div>
                <div id="plannedExpenses">

                </div>
                <hr>
                <button type="submit" id="expenseFormSubmit" class="btn btn-success">Submit!</button>
            </form>
        </div>

